        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span></span> Welcome</h3>
              <% if (user.local.username) { %>
                    <p>
                        
                        <strong></strong>: <%= user.local.username %><br>
                        <strong></strong>: <%= user.local.lastname %><br>
						
						
                    </p>
              <% } else { %>
                    <a href='../views/connect-local.ejs' class="btn btn-default">Connect Local</a>
                <% } %>
            </div>
        </div>
 <!-- Facebook INFORMATION -->
       
    </div>
</div>

       
</div>
</div>
